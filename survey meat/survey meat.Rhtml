<!DOCTYPE html>
<html>
    <head>
        <title>Umfrage Fleischkonsum</title>
		<script src="jspsych.js"></script>
		<script src="plugins/jspsych-html-keyboard-response.js"></script>
		<script src="plugins/jspsych-image-keyboard-response.js"></script>
		<script src="plugins/jspsych-survey-multi-choice.js"></script>
		<link href="css/jspsych.css" rel="stylesheet" type="text/css"></link>
		<link rel="import" href="images.html">
    </head>
    <body></body>
	<script>
	/* create timeline */
    var timeline = [];

    /* define welcome message trial */
    var welcome = {
      type: "html-keyboard-response",
      stimulus: "<p>Willkommen zur <strong>Umfrage zum persönlichen Fleischkonsum</strong>.<p>" + "<p>Tippen sie eine beliebige Taste<p>"
    };
    timeline.push(welcome);
	
	/* how to insert an html file??
	get some pictures for better evaluation */
	
	var instructions2 = {
      type: ["html-keyboard-response"],
	  stimulus: "Tippen sie eine beliebige Taste für den Start.",
      post_trial_gap: 20
    };
	
	
	timeline.push(instructions2);
	
	var subject_id = jsPsych.randomization.randomID(15);
	
	
	// defining groups of questions that will go together.
    var page_1_questions = ["Wie viel Fleisch essen Sie im Durchschnitt pro Tag in Gramm?"];

    
    // definiting two different response scales that can be used.
    var page_1_options = ["0 Gramm", "1 bis 50 Gramm", "51 bis 100 Gramm", "101 bis 150 Gramm", "151 bis 200 Gramm", "201 bis 250 Gramm", "251 bis 300 Gramm", "301 bis 350 Gramm", "351 bis 400 Gramm", "401 bis 450 Gramm", "451 bis 500 Gramm", "501 Gramm und mehr"];
    

    var multi_choice_block = {
      type: 'survey-multi-choice',
      questions: [{prompt: "Wie viel Fleisch essen Sie im Durchschnitt pro Tag in Gramm?", options: page_1_options, required:true,}],
    };

    var multi_choice_block_horizontal = {
      type: 'survey-multi-choice',
      questions: [{prompt: "I like vegetables", options: page_1_options, required: true, horizontal: true,}],
    };
	
	timeline.push(multi_choice_block)
      
    jsPsych.init({
      timeline: timeline,
      on_finish: function() {
        jsPsych.data.displayData();
      }
    });
	
	jsPsych.data.addProperties({
  subject: subject_id
});
	
		</script>
</html>